# ML Server Configuration
ML_SERVER_URL=http://localhost:8001

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded
JWT_SECRET_KEY=your_jwt_secret_key_here

# Monitoring
FLOWER_PASSWORD=your_flower_monitoring_password
GRAFANA_PASSWORD=your_grafana_dashboard_password

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_USE_TLS=True

# Broker API Keys (Encrypted)
ZERODHA_API_KEY=encrypted_zerodha_api_key
ZERODHA_API_SECRET=encrypted_zerodha_api_secret
UPSTOX_API_KEY=encrypted_upstox_api_key
UPSTOX_API_SECRET=encrypted_upstox_api_secret
ALICE_BLUE_USER_ID=encrypted_alice_blue_user_id
